{
   "name": "mf-nav",
   "version": "0.0.0",
   "scripts": {
      "ng": "ng",
      "start": "ng serve",
      "build": "ng build",
      "watch": "ng build --watch --configuration development",
      "test": "ng test",
      "build:single-spa:mf-nav": "ng build mf-nav --configuration production",
      "serve:single-spa:mf-nav": "ng s --project mf-nav --disable-host-check --port 4205 --live-reload false",
      "start:mock": "webpack-dev-server --config mocks/microfrontends/webpack.config.js --mode=development --env mockFile=store.js",
      "start:dev": "concurrently --names \"SERVER,MOCK\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run serve:single-spa:mf-nav\" \"npm run start:mock\"",
      "lint": "npx eslint '**/*.{js,ts,tsx,html,css}' --quiet --fix",
      "prettier": "npx prettier --write .",
      "stylelint": "npx stylelint '**/*.scss' --custom-syntax postcss-scss --quiet --fix",
      "precommit": "npx lint-staged",
      "pre-push": "npm run lint && npm run prettier"
   },
   "private": true,
   "dependencies": {
      "@angular/animations": "~13.2.0",
      "@angular/common": "~13.2.0",
      "@angular/compiler": "~13.2.0",
      "@angular/core": "~13.2.0",
      "@angular/forms": "~13.2.0",
      "@angular/platform-browser": "~13.2.0",
      "@angular/platform-browser-dynamic": "~13.2.0",
      "@angular/router": "~13.2.0",
      "concurrently": "^7.0.0",
      "rxjs": "~7.5.0",
      "single-spa": ">=4.0.0",
      "single-spa-angular": "^6.0.1",
      "tslib": "^2.3.0",
      "ui-lib": "file:../ui-library/dist/ui-lib",
      "webpack-merge": "^5.8.0",
      "zone.js": "~0.11.4"
   },
   "devDependencies": {
      "@angular-builders/custom-webpack": "13.1.0",
      "@angular-devkit/build-angular": "~13.2.2",
      "@angular-eslint/builder": "13.1.0",
      "@angular-eslint/eslint-plugin": "13.1.0",
      "@angular-eslint/eslint-plugin-template": "13.1.0",
      "@angular-eslint/schematics": "13.1.0",
      "@angular-eslint/template-parser": "13.1.0",
      "@angular/cli": "~13.2.2",
      "@angular/compiler-cli": "~13.2.0",
      "@types/jasmine": "~3.10.0",
      "@types/node": "^12.11.1",
      "@typescript-eslint/eslint-plugin": "5.11.0",
      "@typescript-eslint/parser": "5.11.0",
      "eslint": "^8.2.0",
      "html-webpack-plugin": "^5.5.0",
      "jasmine-core": "~4.0.0",
      "karma": "~6.3.0",
      "karma-chrome-launcher": "~3.1.0",
      "karma-coverage": "~2.1.0",
      "karma-jasmine": "~4.0.0",
      "karma-jasmine-html-reporter": "~1.7.0",
      "lint-staged": "^12.3.4",
      "postcss-scss": "^4.0.3",
      "prettier": "2.5.1",
      "standalone-single-spa-webpack-plugin": "^3.0.0",
      "style-loader": "^3.3.1",
      "stylelint": "^14.5.3",
      "stylelint-scss": "^4.1.0",
      "typescript": "~4.5.2",
      "webpack-cli": "^4.9.2"
   },
   "lint-staged": {
      "*.{js,ts,tsx,html,css}": "eslint --cache --fix",
      "*.{js,ts,tsx,html,scss}": "prettier --write --ignore-unknown",
      "*.scss": "stylelint '**/*.scss' --custom-syntax postcss-scss --quiet --fix"
   }
}
